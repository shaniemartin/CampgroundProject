<%- include ("../partials/header") %>

<div class="container mt-5">
    <div>
        <h1 class="text-center">Create a New Campground </h1>
    
        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">

                <div class="form-group">
                    <input type="text" placeholder="name" name="name" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" placeholder="image url" name="image" class="form-control">
                </div>

                <div class="form-group">
                    <input type="number" placeholder="price per night" name="price" min="0.00" step="0.01" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" placeholder="description" name="description" class="form-control">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>
            
            <a href="/campgrounds">Back</a>
        </div>
    </div>




</div>

<%- include ("../partials/footer") %>