<%- include ("../partials/header") %>

<div class="container mt-5">
    <div>
        <h1 class="text-center">Edit <%= campground.name %> Campground </h1>

        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="POST">

                <div class="form-group">
                    <input type="text" name="campground[name]" class="form-control" value="<%= campground.name %>">
                </div>

                <div class="form-group">
                    <input type="text" value="<%= campground.image %>" name="campground[image]" class="form-control">
                </div>

                <div class="form-group">
                    <input type="number" value="<%= campground.price %>" name="campground[price]" min="0.01" step="0.01" class="form-control">
                </div>

                <div class="form-group">
                    <input type="text" value="<%= campground.description %>" name="campground[description]" class="form-control">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>

            <a href="/campgrounds">Back</a>
        </div>
    </div>




</div>

<%- include ("../partials/footer") %>