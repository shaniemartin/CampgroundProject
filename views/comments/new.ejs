<%- include ("../partials/header") %>

<div class="container mt-5">
    <div>
        <h1 class="text-center">Add New Comment to <%= campground.name %> </h1>

        <div style="width: 30%; margin: 30px auto;">
            <form action="/campgrounds/<%= campground.id %>/comments" method="POST">

                <div class="form-group">
                    <input type="text" placeholder="text" name="comment[text]" class="form-control">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>

            </form>

            <a href="/campgrounds">Back</a>
        </div>
    </div>




</div>

<%- include ("../partials/footer") %>